%h1 Groups
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.name
        %td= link_to 'Show', group
        %td= link_to 'Edit', edit_group_path(group)
        %td= link_to 'Destroy', group, method: :delete
%br/
= link_to '追加', new_group_path
= link_to '探す', groups_search_path
